<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_height="fill_parent" 
	 android:layout_width="fill_parent">
	 
	  <TextView android:id="@+id/proposal"
	  android:layout_height="wrap_content" 
	  android:layout_width="wrap_content"
	  android:textAppearance="?android:attr/textAppearanceLarge"
	  android:text="Proposal:"/>

	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/proposalIcons"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:layout_toRightOf="@+id/proposal"
	 android:layout_height="wrap_content" 
	 android:layout_width="fill_parent"/>
	   

	  <TextView android:id="@+id/routeInfo"
	  android:layout_height="wrap_content" 
	  android:layout_width="fill_parent"
	  android:paddingLeft="3dip"
android:textStyle="bold"
	  android:layout_below="@+id/proposal"/>

	  <TextView android:id="@+id/footer"
	  android:layout_height="wrap_content" 
	  android:layout_width="fill_parent"
	  android:paddingLeft="3dip"
android:textStyle="bold"
	  android:layout_below="@+id/routeInfo"/>

	 
</RelativeLayout>