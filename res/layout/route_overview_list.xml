<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 android:layout_height="fill_parent" 
	 android:layout_width="fill_parent">
	 
	 
	  <TextView android:id="@+id/departureTime"
	  android:layout_height="wrap_content" 
	  android:layout_width="wrap_content"
	  android:textSize="15dip"
	  android:textStyle="bold"
	  android:layout_margin="7dip"
	  android:text="14:17"/>
	  
	  <TextView android:id="@+id/arrivalTime"
	  android:layout_height="wrap_content" 
	  android:layout_width="wrap_content"
	  android:textSize="15dip"
	  android:textStyle="bold"
	  android:layout_marginTop="7dip"
	  android:layout_marginLeft="20dip"
	  android:layout_toRightOf="@+id/departureTime"
	  android:text="15:17"/>
	  
	  <TextView android:id="@+id/travelTime"
	  android:layout_height="wrap_content" 
	  android:layout_width="wrap_content"
	  android:layout_below="@+id/departureTime"
	  android:layout_marginLeft="7dip"
	  android:textSize="15dip"
	  android:text="Reisetid : 1h 17m"/>

	  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/travelTypes"
      android:orientation="horizontal"
      android:layout_centerHorizontal="true"
      android:layout_toRightOf="@+id/departureTime"
      android:layout_height="wrap_content" 
	  android:layout_width="fill_parent"/>
</RelativeLayout>