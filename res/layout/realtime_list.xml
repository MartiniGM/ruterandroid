<?xml version="1.0" encoding="utf-8"?>
<!-- This is the entry of every item in realtime.xml's list. -->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    android:orientation="vertical"
	>
	
	<TextView
		android:id="@+id/platform"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:paddingLeft="40dip"
		
		android:text="1"
		/>
	
	<TextView
		android:id="@+id/line"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="2dip"
		android:layout_below="@+id/platform"
		
		android:background="#ffffff"
		android:textColor="#3c65bf"
		android:padding="2dip"
		android:textStyle="bold"
		android:typeface="sans"
		android:textSize="20dip"
		
		android:text="301"
		/>
		
	<ImageView
		android:id="@+id/icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/platform"

		android:layout_marginRight="6dip"
		android:layout_alignParentRight="true"
		
		android:src="@drawable/icon_boat"
		
		/>
		
	<TextView
		android:id="@+id/destination"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		
		android:textColor="#ffffff"
		android:textStyle="bold"
		android:typeface="sans"
		android:textSize="20dip"
		
		android:paddingLeft="6dip"
		android:paddingTop="2dip"
		android:paddingRight="2dip"
		android:paddingBottom="2dip"
		

		
		
		
		android:layout_toRightOf="@+id/line"
		android:layout_toLeftOf="@+id/icon"
		android:layout_below="@+id/platform"
		android:ellipsize="marquee"
		android:singleLine="true"
		
		android:text="Varingskollen [tog]"
		/>
			
    <TextView android:id="@+id/departures"
        android:layout_width="fill_parent"
        android:layout_height="17dip"
		android:layout_below="@+id/destination"
				
				
		android:textColor="#aaaa00"
		android:background="@drawable/shortcut_sanntidsskinn"
		android:paddingLeft="1dip"
		android:paddingTop="1dip"
		android:paddingRight="1dip"
		android:paddingBottom="2dip"
		android:textSize="20dip"
				
				
		android:ellipsize="marquee"
		android:singleLine="true"
		
		android:text="9m 13:43 14:53"
		
    	/>
    
    
    <!-- departureInfo contains stopVisitNote and devi -->
	<LinearLayout android:id="@+id/departureInfo" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/destination"
		android:paddingLeft="50dip"
		android:paddingRight="6dip"
		android:ellipsize="marquee"
		android:singleLine="true"

		/>

</RelativeLayout>